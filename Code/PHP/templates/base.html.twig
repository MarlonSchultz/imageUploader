<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ImageUploader{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
    {% endblock %}
</head>

<body>
<div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">imageUploader</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav ml-auto">
                {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ logout_path() }}">Logout</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm">
            {% if app.user %}
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a href="{{ path('uploader_new') }}">Bild heraufladen</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Item 2</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Item 3</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Item 4</a>
                    </li>
                </ul>
            {% endif %}
        </div>
        <div class="col-11">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>


{% block javascripts %}{% endblock %}
</body>
</html>
